@model PostCreateViewModel

<div class="single">
    <div class="container">
        <div class="single-top">

            <h2>Create New Post</h2>

            @using (Html.BeginForm("Create", "Posts", FormMethod.Post))
            {
                <div>
                    @Html.LabelFor(p => p.Title)
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
                </div>
                <div>
                    @Html.LabelFor(p => p.Content)
                    @Html.TextBoxFor(p => p.Content, new { @class = "form-control" })
                </div>

                <input type="submit" />
            }

            </div>
</div>
</div>